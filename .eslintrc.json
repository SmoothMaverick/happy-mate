{
  "env": {
    "mocha": true
  },
  "extends": "airbnb",
  "rules": {
    "one-var-declaration-per-line": 2,
    "handle-callback-err": 2,
    "no-mixed-requires": 2,
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-exit": 2,
    "no-restricted-modules": 2,
    "no-sync": 2
  }
}
